<h1 class="h4 text-center">@ViewData["Selam"]</h1>
<p>Toplantı katılım durumunuzu bildiriniz.</p>

<div class="card my2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">Tarih: @Model.Date.ToString("dd/MM/yyyy HH:mm:ss")</li>
        <li class="list-group-item">Katılımcı sayısı: @Model.NumberOfPeople</li>
    </ul>
</div>

<a  class="btn btn-sm btn-outline-primary" style="margin-top: 10px;" asp-controller="meeting" asp-action="apply">Başvuru Yap</a>