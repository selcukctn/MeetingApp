@model List<UserInfo>
@{
    ViewData["Title"] = "Katılımcı Listesi";
}
<h1 class="h4">Toplantıya Katılım Listesi</h1>
<table class="table">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var user in Model)
        {
            var status = user.WillAttend == true ? "Evet" : "Hayır";
            var className = user.WillAttend == true ? "table-success" : "table-danger";
            if (user.WillAttend == true)
            {
                i++;
            }


            <tr class="@className">
                <td>@user.Name</td>
                <td>@status</td>
                <td><a class="btn btn-sm btn-primary" asp-controller="Meeting" asp-action="Details"
                        asp-route-id="@user.Id">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="card text-center">
    <div class="card-body">
        <p>Katılımcı Sayısı: @i</p>
    </div>
</div>
<a class="btn btn-sm btn-outline-primary" style="margin-top: 10px;" asp-controller="Home"
    asp-action="Index">Anasayfa</a>